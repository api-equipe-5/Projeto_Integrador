{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "defexception",
    "defprotocol",
    "defstruct",
    "def.+(.+\\\\.+).+do",
    "^\\s+use\\s+"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/",
    "minimum_coverage": 100
  },

  "terminal_options": {
    "file_column_width": 100
  },

  "skip_files": [
    "lib/sakavault.ex",
    "lib/sakavault/repo.ex",
    "lib/sakavault/secrets_api.ex",
    "lib/sakavault/application.ex",
    "lib/sakavault/release_tasks.ex",

    "lib/sakavault_web.ex",
    "lib/sakavault_web/views/error_helpers.ex",
    "lib/sakavault_web/router.ex",

    "test",
    "deps",
    "/root/deps"
  ]
}
